<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Something"/>

    <Button
        android:id="@+id/btnSendBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Broadcast"
        android:onClick="sendBroadcast"/>

    <TextView
        android:id="@+id/tvMessageReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etNumOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_weight="1"
            android:hint="Number 1"/>

        <EditText
            android:id="@+id/etNumTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_weight="1"
            android:hint="Number 2"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnStartIntentAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start The IntentService to Add"
        android:onClick="onStartIntentSeviceClicked"/>

    <Button
        android:id="@+id/btnStartIntentMul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start The IntentService to Mul"
        android:onClick="onStartIntentSeviceClicked"/>

</LinearLayout>